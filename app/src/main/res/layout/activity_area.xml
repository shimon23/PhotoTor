<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_area">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="בחר אזורי עבודה"
            android:textSize="24sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/northChkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notrh" />

        <CheckBox
            android:id="@+id/sharonChkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sharon" />

        <CheckBox
            android:id="@+id/shomronChkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shomron" />

        <CheckBox
            android:id="@+id/jerusalemChkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jerusalem" />

        <CheckBox
            android:id="@+id/southChkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/south" />

        <CheckBox
            android:id="@+id/centralChkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/central" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="319dp" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/save" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>